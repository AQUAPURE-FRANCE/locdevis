{% extends '@PrestaShop/Admin/layout.html.twig' %}

 {% block content %}

     <div class="bootstrap" id="content">
         <div class="card p-1">
             <div class="panel col lg-12">
                 <div class="panel-heading">Devis</div>
                 <hr>
                 {{ form_start(form) }}
                 {{ form_widget(form) }}

                 <div class="d-flex justify-content-center">
                     <button class="btn btn-primary">
                         {{ button_label|default('Enregistrer') }}
                     </button>
                 </div>

                 {{ form_end(form) }}



                 <table class="table table-striped table-responsive-row clearfix">
                     <thead>
                     <tr>
                         <td>Ref</td>
                         <td>Nouveau client</td>
                         <td>Nom</td>
                         <td>Total</td>
                         <td>Etat</td>
                         <td>Date</td>
                         <td>PDF</td>
                     </tr>
                     </thead>
                     <tbody>
                     <tr>
                         for quotation in quotations ?
                         <td>quotation.ref</td>
                         <td>quotation.customer.name</td>
                         <td>quotation.customer.isNew (true/false)</td>
                         <td>quotation.total</td>
                         <td>quotation.status</td>
                         <td>quotation.date</td>
                         <td>quotation.pdf</td>
                     </tr>
                     <tr>
                         <td>quotation.ref</td>
                         <td>quotation.customer.name</td>
                         <td>quotation.customer.isNew (true/false)</td>
                         <td>quotation.total</td>
                         <td>quotation.status</td>
                         <td>quotation.date</td>
                         <td>quotation.pdf</td>
                     </tr>
                     </tbody>
                 </table>
             </div>
         </div>
     </div>
 {% endblock %}
