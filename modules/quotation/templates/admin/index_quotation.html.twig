{% extends '@PrestaShop/Admin/layout.html.twig' %}

 {% block content %}

     <div class="bootstrap" id="content">
         <div class="card p-1">
             <div class="panel col lg-12">
                 <div class="panel-heading mb-3">Devis</div>
                 <a href="{{ path('quotation_admin_add') }}">+</a>

                 <table class="table table-striped table-responsive-row">
                     <thead>
                     <tr>
                         <td>Id</td>
                         <td>Référence</td>
                         <td>Client</td>
                         <td>Message</td>
                         <td>Date d'ajout</td>
                         <td>Status</td>
                         <td>Prix total du devis</td>
                     </tr>
                     </thead>
                     <tbody>
                     {% for quotation in quotations %}
                         <tr>
                             <td>{{ quotation.id_quotation }}</td>
                             <td>{{ quotation.reference }}</td>
                             <td>{{ quotation.firstname }} {{ quotation.lastname }}</td>
                             <td>{{ quotation.message_visible }}</td>
                             <td>{{ quotation.date_add|date('d/m/Y') }}</td>
                             <td>{{ quotation.status }}</td>
                             <td>{{ quotation.total_product_price|number_format(2) }} €</td>
                         </tr>
                     {% endfor %}
                     </tbody>
                 </table>

             </div>
         </div>
     </div>

 {% endblock %}
