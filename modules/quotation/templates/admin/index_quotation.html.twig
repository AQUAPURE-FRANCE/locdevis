{% extends '@PrestaShop/Admin/layout.html.twig' %}

 {% block content %}

     <div class="bootstrap" id="content">
         <div class="card p-1">
             <div class="panel col lg-12">
                 <div class="panel-heading">Devis</div>

                 <hr>
                 {{ form_start(form) }}
                 {{ form_widget(form) }}

                 <div class="d-flex justify-content-center">
                     <button class="btn btn-primary">
                         {{ button_label|default('Enregistrer') }}
                     </button>
                 </div>

                 {{ form_end(form) }}

                 <table class="table table-striped table-responsive-row">
                     <thead>
                     <tr>
                         <td>Ref</td>
                         <td>Message</td>
                         <td>Date d'ajout</td>
                         <td>Status</td>
                         <td>Panier</td>
                         <td>Client</td>
                         <td>Entreprise</td>
                     </tr>
                     </thead>
                     <tbody>
                     {% for quotation in quotations %}
                         <tr>
                             <td>{{ quotation.reference }}</td>
                             <td>{{ quotation.messageVisible }}</td>
                             <td>{{ quotation.dateAdd }}</td>
                             <td>{{ quotation.status }}</td>
                             <td>{{ quotation.idCart }}</td>
                             <td>{{ quotation.idCustomer }}</td>
                             <td>{{ quotation.idCustomerThread }}</td>
                         </tr>
                     {% endfor %}
                     </tbody>
                 </table>
             </div>
         </div>
     </div>

 {% endblock %}
